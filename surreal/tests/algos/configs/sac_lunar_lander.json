{
  "gamma": 0.99,

  "n_step": 3,

  "use_prioritized_replay": true,
  "memory_capacity": 10000,
  "memory_batch_size": 256,

  "initial_alpha": 20.0,
  "optimize_alpha": true,
  "gumbel_softmax_temperature": 1.0,

  "num_q_networks": 2,
  "q_network": [
    {
      "name": "dense",
      "units": 256,
      "activation": "relu"
    },
    {
      "name": "dense",
      "units": 256,
      "activation": "relu"
    },
    {
      "name": "dense",
      "units": 256,
      "activation": "relu"
    }
  ],

  "default_optimizer": {
    "type": "adam",
    "learning_rate": 0.0003,
    "clip_norm": 40
  },
  "q_optimizer": {
    "type": "adam",
    "learning_rate": 0.0008,
    "clip_norm": 40
  },

  "time_unit": "time_step",
  "update_after": "when-memory-ready",
  "update_frequency": 1,
  "num_steps_per_update": 2,
  "sync_frequency": 1,
  "sync_tau": 0.005
}
