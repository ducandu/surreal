{
  "gamma": 0.99,

  "n_step": 3,

  "use_prioritized_replay": true,
  "memory_alpha": 0.5,
  "memory_capacity": 101376,
  "memory_batch_size": 256,

  "initial_alpha": 1.0,
  "gumbel_softmax_temperature": 1.0,

  "policy_network": [
    {
      "name": "conv2d",
      "filters": 16,
      "kernel_size": 8,
      "strides": 4,
      "padding": "same",
      "activation": "relu"
    },
    {
      "name": "conv2d",
      "filters": 32,
      "kernel_size": 4,
      "strides": 2,
      "padding": "same",
      "activation": "relu"
    },
    {
      "name": "conv2d",
      "filters": 256,
      "kernel_size": 11,
      "strides": 1,
      "padding": "valid",
      "activation": "relu"
    },
    {
      "name": "flatten"
    },
    {
      "name": "dense",
      "units": 512,
      "activation": "relu"
    }
  ],

  "num_q_networks": 2,
  "q_network": {
    "pre_concat_networks": {
      "s": [
        {
          "name": "conv2d",
          "filters": 16,
          "kernel_size": 8,
          "strides": 4,
          "padding": "same",
          "activation": "relu"
        },
        {
          "name": "conv2d",
          "filters": 32,
          "kernel_size": 4,
          "strides": 2,
          "padding": "same",
          "activation": "relu"
        },
        {
          "name": "conv2d",
          "filters": 256,
          "kernel_size": 11,
          "strides": 1,
          "padding": "valid",
          "activation": "relu"
        },
        {
          "name": "flatten"
        }
      ]
    },

    "network": [
      {
        "name": "dense",
        "units": 512,
        "activation": "relu"
      }
    ]
  },

  "default_optimizer": {
    "type": "adam",
    "learning_rate": [0.0003, 0.00001],
    "clip_norm": 40
  },

  "q_optimizer": {
    "type": "adam",
    "learning_rate": 0.0005,
    "clip_norm": 40
  },

  "time_unit": "env_tick",
  "update_after": "when-memory-ready",
  "update_frequency": 1,
  "num_steps_per_update": 1,
  "sync_frequency": 1,
  "sync_tau": 0.005
}
